{
  "name": "device-report",
  "version": "1.4.0",
  "description": "Device Report",
  "scripts": {
    "compile": "tsc",
    "uglify": "uglifyjs ./build/app.js -m -c -o ./build/app.min.js",
    "uglify23": "uglifyjs --verbose ./build/app.js -m -c -o ./build/app.min.js",
    "build:t": "tsc && npm run uglify",
    "build1": "rollup -c && npm run uglify && npm run tgml",
    "tgml": "tsc --p ./scripts && node scripts/build.js",
    "copy-version": "tsc --p ./scripts && node scripts/build.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build": "vite build && npm run copy-version",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
  },
  "author": "tom pacheco",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@types/node": "^20.11.17",
    "jszip": "^3.10.1",
    "uglify-js": "^3.5.7"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.10.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.6.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "svelte": "^5.28.1",
    "svelte-check": "^4.1.6",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-singlefile": "^2.2.0"
  }
}
